---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="https://astro.build/blog/" target="_blank">Blog</HeaderLink>
		<HeaderLink href="https://docs.astro.build/en/getting-started/" target="_blank">Docs</HeaderLink>
		<HeaderLink href="https://twitter.com/astrodotbuild">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
